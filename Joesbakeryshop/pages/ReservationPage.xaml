<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Joesbakeryshop.pages.ReservationPage" BackgroundColor="WhiteSmoke">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Entry x:Name="EntName" Placeholder="Name"/>
            <Entry x:Name="EntEmail" Placeholder="Email"/>
            <Entry x:Name="EntPhone" Placeholder="Phone"/>
            <Entry x:Name="EntTotalPeople" Placeholder="TotalPeople"/>
            <Label Text="Booking Date"/>
            <DatePicker x:Name="TpBookingDate" Format="D"> </DatePicker>
            <Label Text="Booking Time"/>
            <TimePicker x:Name="TpBookingTime"></TimePicker>
            <Button x:Name="BtnBookTable" Clicked="BtnBookTable_OnClicked" Text="Make Reservation" TextColor="White" FontSize="Medium" BackgroundColor="MediumTurquoise"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>